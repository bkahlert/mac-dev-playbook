#!/bin/bash

bytes_to_human() {
  b=${1:-0}
  d=''
  s=0
  S=(Bytes {K,M,G,T,E,P,Y,Z}iB)
  while ((b > 1024)); do
    d="$(printf ".%02d" $((b % 1024 * 100 / 1024)))"
    b=$((b / 1024))
    ((s++))
  done
  echo "$b$d ${S[$s]} of space was cleaned up"
}

delete_caches() {
  local cacheName=$1
  shift
  local paths=("$@")
  echo "Initiating cleanup ${cacheName} cache..."
  for folderPath in "${paths[@]}"; do
    if [[ -d ${folderPath} ]]; then
      dirSize=$(du -hs "${folderPath}" | awk '{print $1}')
      echo "Deleting ${folderPath} to free up ${dirSize}..."
      rm -rfv "${folderPath}" &>/dev/null
    fi
  done
}

# Default arguments
declare doUpdates=true

# Ask for the administrator password upfront
sudo -v

# Keep-alive sudo until `cleanup.sh` has finished
while true; do
  sudo -n true
  sleep 60
  kill -0 "$$" || exit
done 2>/dev/null &

oldAvailable=$(df / | tail -1 | awk '{print $4}')

echo 'Empty the Trash on all mounted volumes and the main HDD...'
sudo rm -rfv /Volumes/*/.Trashes/* &>/dev/null
sudo rm -rfv ~/.Trash/* &>/dev/null

echo 'Clear System Log Files...'
sudo rm -rfv /private/var/log/asl/*.asl &>/dev/null
sudo rm -rfv /Library/Logs/DiagnosticReports/* &>/dev/null
sudo rm -rfv /Library/Logs/Adobe/* &>/dev/null
rm -rfv ~/Library/Containers/com.apple.mail/Data/Library/Logs/Mail/* &>/dev/null

echo 'Cleanup iOS Applications...'
rm -rfv ~/Music/iTunes/iTunes\ Media/Mobile\ Applications/* &>/dev/null

echo 'Remove iOS Device Backups...'
rm -rfv ~/Library/Application\ Support/MobileSync/Backup/* &>/dev/null

echo 'Cleanup XCode Derived Data and Archives...'
rm -rfv ~/Library/Developer/Xcode/DerivedData/* &>/dev/null
rm -rfv ~/Library/Developer/Xcode/Archives/* &>/dev/null

if type "xcrun" &>/dev/null; then
  echo 'Cleanup iOS Simulators...'
  osascript -e 'tell application "com.apple.CoreSimulator.CoreSimulatorService" to quit'
  osascript -e 'tell application "iOS Simulator" to quit'
  osascript -e 'tell application "Simulator" to quit'
  xcrun simctl shutdown all
  xcrun simctl erase all
fi

if [ -d "$HOME/Library/Caches/CocoaPods" ]; then
  echo 'Cleanup CocoaPods cache...'
  rm -rfv "$HOME/Library/Caches/CocoaPods/"* &>/dev/null
fi

# support delete gradle caches
if [ -d "$HOME/.gradle/caches" ]; then
  echo 'Cleanup Gradle cache...'
  rm -rfv "$HOME/.gradle/caches/" &>/dev/null
fi

# support delete Dropbox Cache
if [ -d "$HOME/Dropbox" ]; then
  echo 'Clear Dropbox ðŸ“¦ Cache Files...'
  sudo rm -rfv "$HOME/Dropbox/.dropbox.cache/"* &>/dev/null
fi

if type "composer" &>/dev/null; then
  echo 'Cleanup composer...'
  composer clearcache &>/dev/null
fi

if type "brew" &>/dev/null; then
  if [ "$doUpdates" -ne 0 ]; then
    echo 'Update Homebrew Recipes...'
    brew update
    echo 'Upgrade and remove outdated formulae'
    brew upgrade
  fi
  echo 'Cleanup Homebrew Cache...'
  brew cleanup -s &>/dev/null
  rm -rfv "$(brew --cache)" &>/dev/null
  brew tap --repair &>/dev/null
fi

if type "gem" &>/dev/null; then
  echo 'Cleanup any old versions of gems'
  gem cleanup &>/dev/null
fi

if type "docker" &>/dev/null; then
  echo 'Cleanup Docker'

  # remove dangling volumes
  while read -r volume; do
    docker volume rm "$volume"
  done < <(docker volume ls -q -f "dangling=true")

  # remove exited containers
  while read -r container; do
    docker rm "$container"
  done < <(docker ps -q -f "status=exited")

  # remove dangling images
  while read -r image; do
    docker rmi "$image"
  done < <(docker images -q -f "dangling=true")
fi

echo 'Cleanup pip cache...'
rm -rfv "$HOME/Library/Caches/pip"

if [ "$PYENV_VIRTUALENV_CACHE_PATH" ]; then
  echo 'Removing Pyenv-VirtualEnv Cache...'
  rm -rfv $PYENV_VIRTUALENV_CACHE_PATH &>/dev/null
fi

if type "npm" &>/dev/null; then
  echo 'Cleanup npm cache...'
  npm cache clean --force
fi

if type "yarn" &>/dev/null; then
  echo 'Cleanup Yarn Cache...'
  yarn cache clean --force
fi

echo 'Purge inactive memory...'
sudo purge

echo 'Success!'

newAvailable=$(df / | tail -1 | awk '{print $4}')
count=$((oldAvailable - newAvailable))
bytes_to_human $count
